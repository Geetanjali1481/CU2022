@page
@model NoteManager.Pages.NotesModel

<h1>These are my notes!!!</h1>

<a asp-page="AddNote">Add new Note</a>

<table class="table table-hover table-striped">
    <thead>
        <tr class="table-info">
            <td>Text</td>
            <td>Insert Date</td>
            <td>update Date</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var note in Model.Notes)
        {
            <tr>
                <td>@note.Text</td>
                <td>@format(note.InsertDate)</td>
                <td>@format(note.UpdateDate)</td>
            </tr>

            string format(DateTime dt) => dt.ToString("MM/dd/yyyy (hh:mm tt)");
        }
    </tbody>
</table>
